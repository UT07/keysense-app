# =============================================================================
# Purrrfect Keys Environment Variables
# Copy this file to .env.local and fill in your values.
# NEVER commit .env.local — it is listed in .gitignore.
# =============================================================================

# -----------------------------------------------------------------------------
# Firebase Configuration
# Get these from Firebase Console → Project Settings → General → Your apps
# -----------------------------------------------------------------------------
EXPO_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
EXPO_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.firebasestorage.app
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
EXPO_PUBLIC_FIREBASE_APP_ID=your_firebase_app_id
EXPO_PUBLIC_FIREBASE_DATABASE_URL=
EXPO_PUBLIC_FIREBASE_MEASUREMENT_ID=

# Set to "true" to connect to local Firebase emulators (Auth on 9099, Firestore on 8080)
EXPO_PUBLIC_FIREBASE_EMULATOR=false

# -----------------------------------------------------------------------------
# Google Sign-In
# Firebase Console → Authentication → Sign-in method → Google → Web client ID
# -----------------------------------------------------------------------------
EXPO_PUBLIC_GOOGLE_WEB_CLIENT_ID=your_google_web_client_id.apps.googleusercontent.com

# -----------------------------------------------------------------------------
# Gemini AI API
# Get from Google AI Studio: https://aistudio.google.com/app/apikey
# NOTE: This key is bundled into the client app via EXPO_PUBLIC_ prefix.
# For production, migrate to a Cloud Functions proxy to keep the key server-side.
# -----------------------------------------------------------------------------
EXPO_PUBLIC_GEMINI_API_KEY=your_gemini_api_key

# -----------------------------------------------------------------------------
# PostHog Analytics (Optional)
# Get from PostHog → Project Settings → API Key
# Code reads EXPO_PUBLIC_POSTHOG_API_KEY (not POSTHOG_API_KEY)
# -----------------------------------------------------------------------------
EXPO_PUBLIC_POSTHOG_API_KEY=your_posthog_api_key

# -----------------------------------------------------------------------------
# ElevenLabs TTS (Optional — premium voice synthesis for cat characters)
# Get from https://elevenlabs.io → Profile → API Key
# Falls back to expo-speech (device TTS) when not configured.
# NOTE: For production, migrate to a Cloud Functions proxy.
# -----------------------------------------------------------------------------
EXPO_PUBLIC_ELEVENLABS_API_KEY=your_elevenlabs_api_key
